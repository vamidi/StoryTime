{
	"productName": "Storytime",
	"directories": {
		"buildResources": "src/assets",
		"output": "release/"
	},
	"extraResources": [
		{
			"from": "./src/assets/data",
			"to": "assets/data",
			"filter": "**/*"
		},
		{
			"from": "./next/next.zip",
			"to": "./"
		}
	],
	"appId": "com.vamidicreations.storytime",
	"files": [
		"**/*",
		"!**/*.ts",
		"!.github",
		"!.vscode",
		"!.code-workspace",
		"!.npmrc",
		"!*.md",
		"!package.json",
		"!package-lock.json",
		"!src/*.*",
		"!src/app",
		"!src/assets",
		"!src/environments",
		"src/api/*",
		"!src/api/*.ts",
		"!e2e/",
		"!hooks/",
		"!_config.yml",
		"!angular.json",
		"!tsconfig*.json",
		"!tslint.json",
		"!.eslintrc.json",
		"!karma.conf.js",
		"!angular.webpack.js",
		"!*.map"
	],
	"win": {
		"icon": "src/assets/icons/StoryTime_logo_001_trans.png",
		"target": [
			{
				"target": "nsis",
				"arch": "x64"
			}
		],
		"publish": ["github"]
	},
	"nsis": {
		"oneClick": false,
		"perMachine": true
	},
	"portable": {

	},
	"mac": {
		"icon": "src/assets/icons/StoryTime_logo_512x512.png",
		"target": ["dmg"],
		"publish": ["github"]
	},
	"linux": {
		"icon": "src/assets/icons/StoryTime_logo_001_trans.png",
		"target": ["AppImage"]
	}
}
