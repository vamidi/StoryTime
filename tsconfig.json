{
	"compileOnSave": false,
	"compilerOptions": {
		"importHelpers": true,
		"module": "esnext",
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2015",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2017",
			"dom"
		],
		"plugins": [
			{
				"name": "tslint-language-service"
			}
		]
	},
	"include": [
		"src/**/*.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}
